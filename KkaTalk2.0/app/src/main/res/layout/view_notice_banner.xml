<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noticeBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="16dp"
    android:visibility="gone"
    android:elevation="4dp">

    <ImageButton
        android:id="@+id/btnCloseNotice"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="닫기"/>

    <TextView
        android:id="@+id/tvNoticeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btnCloseNotice"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:text="공지 제목 예시"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvNoticeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNoticeTitle"
        android:layout_alignParentStart="true"
        android:text="공지 내용 예시입니다"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/btnCloseNotice"
        android:layout_marginEnd="8dp"/>
</RelativeLayout>
