<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TripNote"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_marginBottom="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/btnAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="전체"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnUpcoming"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="예정"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnOngoing"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="진행중"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnCompleted"
                style="@style/Widget.Material3.Chip.Filter"
                android:text="완료"/>

        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_marginBottom="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/btnSortNewest"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="최신순"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnSortOldest"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="오래된순"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnSortStartAsc"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="출발일↑"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/btnSortStartDesc"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="출발일↓"/>

        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/dropdownFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="필터 선택"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/cardUpcoming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#E3F2FD"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="예정"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvUpcomingCount"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="0"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardOngoing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="진행중"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvOngoingCount"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="0"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardCompleted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#E8F5E9"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="완료"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCompletedCount"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="0"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="여행 제목 또는 지역 검색"
            android:padding="12dp"
            android:layout_margin="8dp"/>

        <!-- 여행 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTripList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="80dp"/>

        <!-- Empty View -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행이 없습니다 ✈"
                android:textSize="16sp"
                android:textColor="#777777"/>

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_nav_menu"/>

    </LinearLayout>


    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="여행 추가"
        android:src="@drawable/ic_add"
        app:layout_gravity="bottom|end"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
