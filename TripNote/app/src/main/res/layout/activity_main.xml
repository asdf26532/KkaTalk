<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 앱 타이틀 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TripNote"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- 앱 설명 -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="여행을 기록하고 정리하세요"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:background="@drawable/bg_filter_unselected"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

            <Button
                android:id="@+id/btnUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="예정"
                android:background="@drawable/bg_filter_unselected"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

            <Button
                android:id="@+id/btnOngoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="진행중"
                android:background="@drawable/bg_filter_unselected"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

            <Button
                android:id="@+id/btnCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="완료"
                android:background="@drawable/bg_filter_unselected"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아직 여행이 없어요 ✈️"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="아래 + 버튼을 눌러 여행을 추가해보세요"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 여행 목록 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTripList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:contentDescription="여행 추가"
        android:src="@android:drawable/ic_input_add" />

</FrameLayout>
