<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 여행 요약"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:radius="12dp"
        android:elevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부산 1일차 여행"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSummaryDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광안리 → 해운대 → 자갈치시장"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvSummaryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 3곳 방문"
                android:layout_marginTop="8dp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvSummaryComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘은 바다 중심의 여행이었어요"
                android:layout_marginTop="12dp"
                android:textStyle="italic"
                android:textColor="#444444"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>