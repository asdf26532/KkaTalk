<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TripNote"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginBottom="16dp"/>

        <!-- 필터 영역 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAll"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="전체"/>

                <Button
                    android:id="@+id/btnUpcoming"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="예정"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnOngoing"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="진행중"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnCompleted"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="완료"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- 정렬 영역 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSortNewest"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:text="최신순"/>

                <Button
                    android:id="@+id/btnSortOldest"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:text="오래된순"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnSortStartAsc"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:text="출발일↑"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnSortStartDesc"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:text="출발일↓"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- 여행 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTripList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="80dp"/>

        <!-- Empty View -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행이 없습니다 ✈"
                android:textSize="16sp"
                android:textColor="#777777"/>

        </LinearLayout>

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="여행 추가"
        android:src="@drawable/ic_add"
        app:layout_gravity="bottom|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
