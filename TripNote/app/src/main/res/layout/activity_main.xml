<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 화면 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 여행 요약"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 오늘 여행이 없을 때 표시 -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 여행 일정이 없어요 ✨"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

    <!-- 오늘 여행 요약 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:radius="12dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 도시 + n일차 -->
            <TextView
                android:id="@+id/tvSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부산 1일차 여행"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 방문 장소 요약 -->
            <TextView
                android:id="@+id/tvSummaryDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광안리 → 해운대 → 자갈치시장"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <!-- 방문 개수 -->
            <TextView
                android:id="@+id/tvSummaryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 3곳 방문"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp" />

            <!-- 자동 코멘트 -->
            <TextView
                android:id="@+id/tvSummaryComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘은 바다 중심의 여행이었어요"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
