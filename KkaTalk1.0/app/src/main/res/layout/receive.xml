<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp">

    <!-- 프로필 사진 -->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp" />

    <!-- 닉네임 -->
    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="닉네임 표시" />

    <!-- 텍스트 메시지 -->
    <TextView
        android:id="@+id/tv_receive_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_profile"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_background"
        android:padding="10dp"
        android:text="받은 메시지"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- 이미지 메시지 -->
    <ImageView
        android:id="@+id/iv_receive_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/iv_profile"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_background"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- 시간 -->
    <TextView
        android:id="@+id/tv_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 표시"
        android:textSize="12sp"
        android:layout_below="@id/tv_receive_msg"
        android:layout_alignStart="@id/tv_receive_msg"
        android:layout_marginTop="4dp"
        android:textColor="#888888" />

    <!-- 리액션 -->
    <TextView
        android:id="@+id/tv_reactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_receive_msg"
        android:layout_marginStart="80dp"
        android:visibility="gone"
        android:paddingTop="4dp"
        android:textColor="#FF5733"
        android:textSize="14sp" />
</RelativeLayout>