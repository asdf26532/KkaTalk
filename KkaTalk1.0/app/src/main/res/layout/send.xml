<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp">

    <!-- 이미지 메시지 -->
    <ImageView
        android:id="@+id/iv_send_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/btn_background"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- 텍스트 메시지 -->
    <TextView
        android:id="@+id/tv_send_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/btn_background"
        android:padding="10dp"
        android:text="보낸 메시지"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:visibility="gone" />

    <!-- 읽음 상태 -->
    <TextView
        android:id="@+id/tv_read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="읽음 표시"
        android:textSize="12sp"
        android:layout_below="@id/iv_send_image"
        android:layout_toStartOf="@id/iv_send_image"
        android:layout_marginTop="4dp"
        android:textColor="#E53935" />

    <!-- 시간 표시 -->
    <TextView
        android:id="@+id/tv_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 표시"
        android:textSize="12sp"
        android:layout_below="@id/iv_send_image"
        android:layout_toStartOf="@id/tv_read_status"
        android:layout_marginTop="4dp"
        android:textColor="#888888" />

</RelativeLayout>