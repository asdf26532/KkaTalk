<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp"
    tools:context=".ReviewActivity">

    <!-- 후기 없음 안내 -->
    <TextView
        android:id="@+id/tvNoReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아직 후기가 없습니다."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingVertical="20dp"
        android:visibility="gone" />

    <!-- 후기 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReviews"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- 후기 작성 -->
    <LinearLayout
        android:id="@+id/layoutWriteReview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_review_card"
        android:padding="20dp"
        android:elevation="6dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별점 주기"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <RatingBar
            android:id="@+id/ratingBarInput"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="false"
            android:progressTint="@color/teal_700"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etReviewInput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="후기를 작성해주세요."
            android:background="@drawable/bg_edittext"
            android:gravity="top|start"
            android:padding="14dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSubmitReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="후기 등록"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/bg_submit_button" />
    </LinearLayout>
</LinearLayout>
